<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_message_fragment_container"
    android:divider="?android:attr/listDivider"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="features.SmartHomeFragment"
    android:background="@android:color/white">


    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:onClick="idleClick"
        android:clickable="true"
        android:focusable="true" />

    <quartifex.com.navigaze.FunButton
        android:id="@+id/button_sh1"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="?android:selectableItemBackground"
        custom:buttonText="Turn On Lights"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:onClick="idleClick"
        android:clickable="true"
        android:focusable="true" />

    <quartifex.com.navigaze.FunButton
        android:id="@+id/button_sh2"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="?android:selectableItemBackground"
        custom:buttonText="Turn Off Lights"
        android:clickable="true"
        android:focusable="true"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:onClick="idleClick"
        android:clickable="true"
        android:focusable="true"/>

    <quartifex.com.navigaze.FunButton
        android:id="@+id/button_sh3"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="?android:selectableItemBackground"
        custom:buttonText="What's the weather outside?"
        android:clickable="true"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:onClick="idleClick"
        android:clickable="true"
        android:focusable="true"/>

    <quartifex.com.navigaze.FunButton
        android:id="@+id/button_sh4"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="?android:selectableItemBackground"
        custom:buttonText="Turn On the TV"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:onClick="idleClick"
        android:clickable="true"
        android:focusable="true"/>

    <quartifex.com.navigaze.FunButton
        android:id="@+id/button_sh5"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="?android:selectableItemBackground"
        custom:buttonText="Turn Off the TV"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:onClick="idleClick"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>